<style>
  .about-page {
    padding: 8rem 2rem 6rem;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
  }

  /* Header */
  .page-header {
    text-align: center;
    margin-bottom: 5rem;
  }

  .page-title {
    font-size: clamp(2.5rem, 6vw, 3.5rem);
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 1rem;
  }

  .page-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-muted);
  }

  /* Sections */
  .section-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 2rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--color-border);
  }

  section {
    margin-bottom: 5rem;
  }

  /* Story */
  .story-content {
    font-size: 1.0625rem;
    color: var(--color-text-muted);
    line-height: 1.8;
  }

  .story-content p {
    margin-bottom: 1.5rem;
  }

  /* Principles */
  .principles-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .principle-card {
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 1.75rem;
    transition: all 0.3s ease;
  }

  .principle-card:hover {
    border-color: var(--color-accent);
    transform: translateY(-2px);
  }

  .principle-number {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    color: var(--color-accent);
    margin-bottom: 0.75rem;
  }

  .principle-card h3 {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 0.75rem;
  }

  .principle-card p {
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  /* Experience */
  .experience-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .experience-item {
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 1.5rem;
  }

  .exp-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 0.75rem;
  }

  .exp-info h3 {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text);
  }

  .exp-company {
    font-size: 0.9375rem;
    color: var(--color-accent);
  }

  .exp-date {
    font-family: var(--font-mono);
    font-size: 0.8125rem;
    color: var(--color-text-dim);
  }

  .exp-description {
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  .resume-cta {
    text-align: center;
  }

  /* Certifications */
  .certs-grid {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .cert-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: 10px;
    padding: 1.25rem;
  }

  .cert-icon {
    font-size: 1.5rem;
  }

  .cert-info h4 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 0.25rem;
  }

  .cert-info p {
    font-size: 0.8125rem;
    color: var(--color-text-dim);
  }

  /* Personal */
  .personal-content {
    font-size: 1.0625rem;
    color: var(--color-text-muted);
    line-height: 1.8;
  }

  .personal-content p {
    margin-bottom: 1.5rem;
  }

  /* CTA */
  .cta-section {
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    padding: 3rem;
    text-align: center;
  }

  .cta-content h2 {
    font-size: 1.75rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 0.75rem;
  }

  .cta-content p {
    font-size: 1rem;
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
    max-width: 400px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Buttons */
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    font-size: 0.9375rem;
    font-weight: 500;
    border-radius: 8px;
    transition: all 0.2s ease;
  }

  .btn-primary {
    background: var(--color-accent);
    color: var(--color-bg);
  }

  .btn-primary:hover {
    background: var(--color-text);
    transform: translateY(-2px);
  }

  .btn-secondary {
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    color: var(--color-text);
  }

  .btn-secondary:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  @media (max-width: 768px) {
    .principles-grid {
      grid-template-columns: 1fr;
    }

    .exp-header {
      flex-direction: column;
      gap: 0.5rem;
    }
  }

  @media (max-width: 640px) {
    .about-page {
      padding: 7rem 1.5rem 4rem;
    }

    .cta-section {
      padding: 2rem 1.5rem;
    }
  }
</style>
